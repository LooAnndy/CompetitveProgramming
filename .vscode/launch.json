{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd",
            "preLaunchTask": "C/C++ Competitive Programming", //这里需要换成你task.json中的任务名
            "args": [
                "/C",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
}